@model IEnumerable<Anything.Models.ProductMaster>

@{
    ViewData["Title"] = "Index";
}

<h1>ProductMaster/Dashboard</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductNumber)
            </th>
            <th>
              Customer Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrawingMaster)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.customer.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DrawingMaster.ProductNumber)
                </td>
                <td>
                   
                    <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>