@model Anything.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-image: url('/images/login-background.jpg'); /* Add your background image path */
    }

    .login-box {
        max-width: 400px;
        width: 100%;
        background: linear-gradient(to bottom, #7EA7C5, #DFCAA6);
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .btn-block {
        width: 100%;
        margin-top: 10px;
    }

    .form-control {
        width:100%;
        padding: 12px 20px;
        border-radius: 30px;
        border: none;
        background: rgba(255, 255, 255, 0.3);
        color: #fff;
        font-size: 1.1rem;
    }

        .form-control:focus {
            box-shadow: none;
            background: rgba(255, 255, 255, 0.5);
            color: #000;
        }

    .input-icon {
        position: relative;
    }

        .input-icon i {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            color: #fff;
        }

    .form-group {
        position: relative;
        margin-bottom: 20px; /* Added spacing between form groups */
    }

        .form-group span.input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
        }

    .btn-primary {
        background-color: #00bfff;
        border: none;
        border-radius: 30px;
        color: #fff;
        padding: 10px;
        font-size: 1.2rem;
    }

        .btn-primary:hover {
            background-color: #00a6d8;
        }

    .btn-secondary {
        background-color: #ffeb3b;
        border: none;
        border-radius: 30px;
        color: #000;
        padding: 10px;
        font-size: 1.2rem;
    }

        .btn-secondary:hover {
            background-color: #fdd835;
        }

    h2 {
        color: #fff;
        text-align: center;
        margin-bottom: 30px;
        font-size: 2rem;
        font-weight: 700;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    }
</style>

<div class="login-container">
    <div class="login-box p-4 rounded shadow">
        <h2>Shopfloor MS</h2>
        @using (Html.BeginForm())
        {
            <div class="form-group w-100 input-icon">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control  w-100", placeholder = "Username" })
                <i class="fa fa-user"></i>
            </div>

            <div class="form-group input-icon">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                <i class="fa fa-key"></i>
            </div>

            <div class="form-group input-icon">
                @Html.DropDownListFor(m => m.UserType, new SelectList(Enum.GetValues(typeof(Anything.Models.UserType))), "Select User", new { @class = "form-control" })
                <i class="fa fa-users"></i>
            </div>

            <button type="submit" class="btn btn-primary btn-block">LOGIN</button>
            <button type="button" class="btn btn-secondary btn-block" onclick="location.href='@Url.Action("Create", "Operates")'">OPERATOR LOGIN</button>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}