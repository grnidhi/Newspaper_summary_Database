@model Anything.Models.StageMaster

@{
    ViewData["Title"] = "Create";
}
<style>
    /* Custom styles for alignment and polished look */
    .form-container {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group label {
        font-weight: bold;
        color: #495057;
    }

    .form-group select,
    .form-group input {
        border-radius: 5px;
        padding: 10px;
    }

    .btn-submit {
        margin-top: 20px;
        width: 100%;
        padding: 10px;
        font-size: 16px;
    }

    .form-row {
        margin-top: 20px;
    }

    .back-link {
        margin-top: 20px;
        display: block;
    }
</style>
<h1>Create</h1>

<h4>StageMaster</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StageName" class="control-label"></label>
                <input asp-for="StageName" class="form-control" />
                <span asp-validation-for="StageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StageDescription" class="control-label"></label>
                <input asp-for="StageDescription" class="form-control" />
                <span asp-validation-for="StageDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcessId" class="control-label"></label>
                <select asp-for="ProcessId" class="form-control" asp-items="ViewBag.ProcessId" id="process-dropdown"></select>
            </div>
            <div class="form-group">
                <label asp-for="DrawingId" class="control-label"></label>
                <select asp-for="DrawingId" class="form-control" asp-items="ViewBag.DrawingId" id="drawing-dropdown"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#process-dropdown').change(function () {
                var processId = $(this).val();
                $.getJSON('/StageMasters/GetDrawingsByProcess', { processId: processId }, function (data) {
                    var drawingDropdown = $('#drawing-dropdown');
                    drawingDropdown.empty();
                    $.each(data, function (i, drawing) {
                        drawingDropdown.append($('<option>', {
                            value: drawing.drawingId,
                            text: drawing.productNumber
                        }));
                    });
                });
            });
        });
    </script>
}