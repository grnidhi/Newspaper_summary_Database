@model Anything.Models.Gzie

@{
    ViewData["Title"] = "Create";
}

<!-- Include Bootstrap CSS (if not already included in your layout) -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<style>
    /* Custom styles for the form */
    .form-container {
        background-color: #f8f9fa;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .form-container h1,
        .form-container h4 {
            text-align: center;
        }

    .form-group label {
        font-weight: bold;
    }

    .btn-submit {
        width: 100%;
        padding: 10px;
        font-size: 16px;
    }

    .back-link {
        margin-top: 20px;
        text-align: center;
    }
</style>

<div class="container mt-5">
    <div class="form-container">
        <h1>Create</h1>
        <h4>Group Master</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- GName Field -->
            <div class="form-group">
                <label asp-for="GName" class="control-label"></label>
                <input asp-for="GName" class="form-control" />
                <span asp-validation-for="GName" class="text-danger"></span>
            </div>

            <!-- ProcessId Field -->
            <div class="form-group">
                <label asp-for="ProcessId" class="control-label"></label>
                <select asp-for="ProcessId" class="form-control" asp-items="ViewBag.ProcessId" id="processDropdown">
                    <option value="">-- Select Process --</option>
                </select>
                <span asp-validation-for="ProcessId" class="text-danger"></span>
            </div>

            <!-- StageId Field -->
            <div class="form-group">
                <label asp-for="StageId" class="control-label"></label>
                <select asp-for="StageId" class="form-control" asp-items="ViewBag.StageId" id="stageDropdown">
                    <option value="">-- Select Stage --</option>
                </select>
                <span asp-validation-for="StageId" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

        <!-- Back to List Link -->
        <div class="back-link">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <!-- Include Bootstrap JS and dependencies (if not already included in your layout) -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#processDropdown').change(function () {
                var processId = $(this).val();
                var stageDropdown = $('#stageDropdown');

                if (processId) {
                    $.ajax({
                        url: '@Url.Action("GetStagesByProcessId", "Gzies")',
                        type: 'GET',
                        data: { processId: processId },
                        success: function (data) {
                            stageDropdown.empty();
                            stageDropdown.append('<option value="">-- Select Stage --</option>');
                            $.each(data, function (index, item) {
                                stageDropdown.append('<option value="' + item.stageId + '">' + item.stageName + '</option>');
                            });
                        }
                    });
                } else {
                    stageDropdown.empty();
                    stageDropdown.append('<option value="">-- Select Stage --</option>');
                }
            });
        });
    </script>
}
