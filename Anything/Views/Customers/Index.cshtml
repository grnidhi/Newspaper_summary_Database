@model IEnumerable<Anything.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>CustomerMaster/Dashboard</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-danger">Create New</a>
</p>
<table class="table table-bordered table-striped ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-success">Edit</a>

                    <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-warning">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>