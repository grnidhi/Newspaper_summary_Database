@model Anything.Models.StageConn

@{
    ViewData["Title"] = "Create";
}

<style>
    /* Custom styles for alignment and polished look */
    .form-container {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group label {
        font-weight: bold;
        color: #495057;
    }

    .form-group select,
    .form-group input {
        border-radius: 5px;
        padding: 10px;
    }

    .btn-submit {
        margin-top: 20px;
        width: 100%;
        padding: 10px;
        font-size: 16px;
    }

    .form-row {
        margin-top: 20px;
    }

    .back-link {
        margin-top: 20px;
        display: block;
    }
</style>

<h1>Create</h1>

<h4>StageController</h4>
<hr />

<div class="form-container">

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Group Dropdown -->
        <div class="form-row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="GId" class="control-label"></label>
                    <select asp-for="GId" class="form-control" asp-items="ViewBag.GId">
                        <option value="">-- Select Group --</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Horizontal Alignment of Stage Dropdowns -->
        <div class="form-row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="CurrentStageId" class="control-label"></label>
                    <select asp-for="CurrentStageId" class="form-control" asp-items="ViewBag.CurrentStageId">
                        <option value="">-- Select Current Stage --</option>
                    </select>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="FailStageId" class="control-label"></label>
                    <select asp-for="FailStageId" class="form-control" asp-items="ViewBag.FailStageId">
                        <option value="">-- Select Fail Stage --</option>
                    </select>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="PassStageId" class="control-label"></label>
                    <select asp-for="PassStageId" class="form-control" asp-items="ViewBag.PassStageId">
                        <option value="">-- Select Pass Stage --</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="form-row">
            <div class="col-md-12">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-info" />
                </div>
            </div>
        </div>
    </form>

    <div class="back-link">
        <a asp-action="Index">Back to List</a>
    </div>
</div>










@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}